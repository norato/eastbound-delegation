<p id="notice"><%= notice %></p>

<h1>Delegates</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Name last</th>
      <th>Name first</th>
      <th>Links</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delegates.each do |delegate| %>
      <tr>
        <td><a href="/states/<%= URI.encode(delegate.state) %>/delegates"><%= delegate.state %></td>
        <td><%= delegate.name_last %></td>
        <td><%= delegate.name_first %></td>
        <td>
          <% delegate.links.split(" ").each_with_index do |l,i| %>
            <%= link_to "Resource #{i + 1}", l %>
          <% end %>
        </td>
        <td><%= link_to 'Show', delegate %></td>
        <td><%= link_to 'Edit', edit_delegate_path(delegate) %></td>
        <td><%= link_to 'Destroy', delegate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

